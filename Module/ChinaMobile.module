[URL Rewrite]
# 开屏
^https?:\/\/(client\.app\.coc|app)\.10086\.cn\/biz-orange\/DN\/(explorePage\/getAdverList|init\/startInit|emotionMarket) - reject-200
# ^https?:\/\/h\.app\.coc\.10086\.cn\/biz-orange\/DN\/emotionMarket - reject

[Script]
# 获取参数
中国移动获取参数 = type=http-request, pattern=^https?:\/\/client\.app\.coc\.10086\.cn\/biz-orange\/[LD]N\/uam(?:onekey|randcode)login\/autoLogin, script-path=https://github.com/ChinaTelecomOperators/ChinaMobile/releases/latest/download/10086.js, requires-body=true

# 定时任务
中国移动余量查询 = type=cron, cronexp="null", script-path=https://github.com/ChinaTelecomOperators/ChinaMobile/releases/latest/download/10086.js, timeout=60, argument="[{phonenumber},{bark_key},{debug},{silent},{service}]"

# 查询接口
中国移动查询接口 = type=http-request, pattern=^https?:\/\/api\.example\.com\/10086\/query, script-path=https://github.com/ChinaTelecomOperators/ChinaMobile/releases/latest/download/10086.js, requires-body=true, timeout=60

# 启动页
中国移动启动页 = type=http-response, pattern=^https?:\/\/client\.app\.coc\.10086\.cn\/biz-orange\/DN\/init\/startInit$, script-path=https://raw.githubusercontent.com/Yuheng0101/X/main/Scripts/ChinaMobile/NoAds.js, requires-body=true

# 首页 - 下拉
中国移动首页 - 下拉 = type=http-response, pattern=^https?:\/\/client\.app\.coc\.10086\.cn\/biz-orange\/DN\/newTopPullSecond\/getNewTopPullList, script-path=https://raw.githubusercontent.com/Yuheng0101/X/main/Scripts/ChinaMobile/NoAds.js, requires-body=true

# 首页 - 悬浮广告
中国移动首页 - 悬浮广告 = type=http-response, pattern=^https?:\/\/client\.app\.coc\.10086\.cn\/biz-orange\/DN\/emotionMarket\/getEmotionMarketNew, script-path=https://raw.githubusercontent.com/Yuheng0101/X/main/Scripts/ChinaMobile/NoAds.js, requires-body=true

# 我的 - 弹窗 
中国移动我的 - 弹窗 = type=http-response, pattern=^https?:\/\/client\.app\.coc\.10086\.cn\/biz-orange\/DN\/friendShake\/getShakeList, script-path=https://raw.githubusercontent.com/Yuheng0101/X/main/Scripts/ChinaMobile/NoAds.js, requires-body=true

[MITM]
hostname = %APPEND% client.app.coc.10086.cn, api.example.com