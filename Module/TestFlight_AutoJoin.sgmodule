[Rule]
DOMAIN,testflight.apple.com,PROXY

[Script]
TestFlight信息获取 = type=http-request, pattern=^https?:\/\/testflight\.apple\.com\/v3\/accounts\/.*\/apps$, script-path=https://gitlab.com/lodepuly/vpn_tool/-/raw/master/Resource/Script/TestFlight/TF_keys.js

APP_ID获取 = type=http-request, pattern=^https://testflight.apple.com/join/(.*), script-path=https://gitlab.com/lodepuly/vpn_tool/-/raw/master/Resource/Script/TestFlight/TF_keys.js

自动加入TestFlight = type=cron, cronexp="0 */1 * * * *", script-path=https://gitlab.com/lodepuly/vpn_tool/-/raw/master/Resource/Script/TestFlight/Auto_join_TF.js, timeout=180

[MITM]
hostname = %APPEND% testflight.apple.com